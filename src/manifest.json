{
  "manifest_version": 2,
  "name": "Developer War Room - your new best friend",
  "short_name": "Developer War Room",
  "description": "Saves data by compressing images on the page.",
  "version": "1.0.0",
  "icons": {
    "128": "assets/icon-128.png"
  },
  "browser_action": {
    "default_icon": "assets/icon-128.png",
    "default_title": "Developer War Room"
    //"default_popup": "popup.html" must be disabled to register w/ browserAction.onClick
  },
  "background": {
    "scripts": ["background.bundle.js"]
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ]
}
